header.header
  nav.nav.nav--tours
    a.nav__el(href="/") All tours
      button.nav__search-btn
        svg
          use(href="/img/icons.svg#icon-search")
      input.nav__search-input(type="text", placeholder="Search tours")
  .header__logo
    img(src="/img/logo-white.png", alt="Natours logo")
  nav.nav.nav--user
    a.nav__el(href="/my-tours") My bookings
    if user
      a.nav__el.nav__el--logout(href='#') Log out
      a.nav__el(href="/me")
        img.nav__user-img(src=`/img/users/${user.photo}`, alt="User photo")
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href=' /signup') Sign up
